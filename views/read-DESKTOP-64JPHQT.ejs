<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width= <div class="main w-full min-h-screen bg-zinc-700">
        <div class="form px-4 py-10">
          <form action="/create" method="post">
            <input
              class="block w-full px-3 py-2 rounded-md bg-zinc-600 outline-none"
              type="text"
              placeholder="Task Name"
              name="name"
            />
            <textarea
              class="block bg-zinc-600 px-3 py-2 mt-2 w-full rounded-md outline-none resize-none"
              placeholder="Write something about text"
              name="details"
            ></textarea>
            <input
              class="px-10 font-medium py-3 text-md mt-5 bg-blue-600 rounded-md"
              type="submit" value="submit"
            />
          </form>
        </div>
        <div class="tasks flex gap-4 flex-wrap px-4 py-20">
          <% if(files.length > 0){ %> 
            <% files.forEach(function(file){ %>
          <div class="task w-72 p-3 bg-zinc-400 rounded-lg">
            <h3 class="text-3xl tracking-tighter mb-3"><%= file.name %></h3>
            <p>
              <% if(file.data.length > 15){ %> 
                <%= file.data.substring(0,16)+'...' %> 
              <%} else {%>
                 <%= file.data %> 
                 <%} %>
            </p>
            <a href="/read/<%= file.name %>" class="text-blue-800 mt-5 inline-block">Read More</a>
            <a href="/delete/<%= file.name %>" class="text-red-500 ml-20">Delete</a>
          </div>
          <% }) %> <% } else{ %>
          <h3 class="px-2">No task yet.</h3>
          <% } %>
        </div>
      </div>, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
</body>
</html>